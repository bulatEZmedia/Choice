<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151718"
    tools:context=".FragmentTraining">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButton14"
            android:layout_width="47dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangle6"
            android:src="@drawable/buttonyet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/myRectangleView15"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/myRectangleView15"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toEndOf="@+id/myRectangleView14"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView10" />

        <View
            android:id="@+id/myRectangleView10"
            android:layout_width="383dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Йога"
            android:textColor="#F7F8FA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/yogaicon"
            app:layout_constraintEnd_toStartOf="@+id/textView55"
            app:layout_constraintHorizontal_bias="0.969"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/myRectangleView14"
            android:layout_width="154dp"
            android:layout_height="37dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView10" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="12 упражнений на открытие дыхания"
            android:textColor="#DEFA2C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView55" />

        <ImageView
            android:id="@+id/imageView42"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/time"
            app:layout_constraintEnd_toStartOf="@+id/textView57"
            app:layout_constraintHorizontal_bias="0.789"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView10" />

        <TextView
            android:id="@+id/textView57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="52dp"
            android:text="14:32 min"
            android:textColor="#DEFA2C"
            app:layout_constraintEnd_toStartOf="@+id/myRectangleView15"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView10" />

        <ImageView
            android:id="@+id/imageView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/skalatraining"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView14"
            app:layout_constraintVertical_bias="0.44" />

        <TextView
            android:id="@+id/textView61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="71dp"
            android:text="-100 ккал"
            android:textColor="#DEFA2C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.74"
            app:layout_constraintStart_toEndOf="@+id/textView57"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView10" />

        <ImageView
            android:id="@+id/imageView43"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/kal"
            app:layout_constraintEnd_toStartOf="@+id/textView61"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintStart_toEndOf="@+id/textView57"
            app:layout_constraintTop_toBottomOf="@+id/myRectangleView10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/go_chat"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:text="Перейти в чат"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.747"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/done" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pause"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="189dp"
                android:layout_height="40dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:text="Поставить на паузу"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.701"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/go_chat" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/done"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="64dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:text="Завершить"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.747"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="47dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rectangle6"
                android:src="@drawable/buttonyet"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="166dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </eightbitlab.com.blurview.BlurView>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/imageButton13"
                android:layout_width="46dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/rectangle6"
                android:src="@drawable/close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView63" />

            <ImageView
                android:id="@+id/imageView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="216dp"
                android:src="@drawable/pausetrain"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/go_training"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#DEFA2C"
                android:text="Продолжить"
                android:textAllCaps="false"
                android:textColor="#192126"
                app:cornerRadius="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.298"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView63" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="250dp"
                android:layout_height="57dp"
                android:text="Вы поставили тренировку на паузу"
                android:textAlignment="center"
                android:textColor="#F7F8FA"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.422" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </eightbitlab.com.blurview.BlurView>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/myRectangleView16"
                android:layout_width="271dp"
                android:layout_height="209dp"
                android:background="@drawable/rectangle4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.394" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="142dp"
                android:layout_height="63dp"
                android:layout_marginTop="224dp"
                android:text="Завершить тренировку"
                android:textColor="#F7F8FA"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.319"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="195dp"
                android:layout_height="53dp"
                android:layout_marginTop="8dp"
                android:text="Вы действительно хотите завершить тренировку? Весь прогресс сохраниться."
                android:textColor="#AAAFB4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.401"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView64" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/done_done"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="93dp"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:text="Завершить"
                android:textAllCaps="false"
                android:textColor="#DEFA2C"
                android:textSize="12sp"
                app:cornerRadius="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.716"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView65" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_train"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:text="Отменить"
                android:textAllCaps="false"
                android:textColor="#DEFA2C"
                android:textSize="12sp"
                app:cornerRadius="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.431"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView65" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </eightbitlab.com.blurview.BlurView>




</androidx.constraintlayout.widget.ConstraintLayout>