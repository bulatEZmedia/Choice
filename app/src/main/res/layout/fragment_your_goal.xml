<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentYourGoal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/then19"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="348dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#54585C"
        android:text="Далее"
        android:textColor="#AAAFB4"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup8"
        app:layout_constraintVertical_bias="0.242" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/bar15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="286dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:text="Ваша цель"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView20" />

    <RadioGroup
        android:id="@+id/radioGroup8"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="50dp"

        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28"
        app:layout_constraintVertical_bias="0.58000004">

        <RadioButton
            android:id="@+id/slim"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="90dp"
            android:text="Похудеть"
            android:textAlignment="textStart"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/muscles_ap"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="140dp"
            android:text="Нарастить мышцы"
            android:textAlignment="textStart"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/be_in_shape"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="80dp"
            android:text="Быть в форме"
            android:textAlignment="textStart"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>