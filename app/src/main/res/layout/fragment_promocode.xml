<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentPromocode"
    android:background="@drawable/background">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/then64"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="339dp"
        android:layout_height="63dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#DEFA2C"
        android:text="Активировать"
        android:textAllCaps="false"
        android:textColor="#192126"
        android:textStyle="bold"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTextPromocode"
        app:layout_constraintVertical_bias="0.666" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutTextPromocode"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_width="321dp"
        android:layout_height="67dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/oval"
        android:hint="Промокод"
        android:orientation="vertical"
        android:textColorHint="#AAAFB4"
        app:boxStrokeColor="#2C2C2E"
        app:endIconTint="#AAAFB4"
        app:errorEnabled="true"
        app:helperText="required"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:hintTextColor="#AAAFB4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView164">>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPromocode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/oval"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView164"
        android:layout_width="230dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:text="Введите в поле промокод и активируйте приветственный бонус"
        android:textColor="#AAAFB4"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView150" />

    <ImageButton
        android:id="@+id/imageButton34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:src="@drawable/iconbackvector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView150"
        android:layout_width="152dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:text="Промокод"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>