<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentFeedback"
    android:background="@drawable/background">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/then48"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="339dp"
        android:layout_height="63dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#DEFA2C"
        android:text="Отправить"
        android:textAllCaps="false"
        android:textColor="#192126"
        android:textStyle="bold"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTextFeedback"
        app:layout_constraintVertical_bias="0.628" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutTextFeedback"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_width="321dp"
        android:layout_height="67dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/oval"
        android:hint="Поделиться проблемой"
        android:orientation="vertical"
        android:textColorHint="#AAAFB4"
        app:boxStrokeColor="#2C2C2E"
        app:endIconTint="#AAAFB4"
        app:errorEnabled="true"
        app:helperText="required"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:hintTextColor="#AAAFB4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/oval"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/imageButton31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/iconbackvector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView138"
        android:layout_width="251dp"
        android:layout_height="28dp"
        android:layout_marginTop="64dp"
        android:text="Опишите проблему"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView142"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ваш отзыв поможет нам стать лучше!"
        android:textColor="#AAAFB4"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView138" />
</androidx.constraintlayout.widget.ConstraintLayout>