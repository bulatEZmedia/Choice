<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FragmentPhysicalLimitations">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@drawable/bar6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/then11"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="348dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#54585C"
        android:text="Далее"
        android:textColor="#AAAFB4"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Физические ограничения"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="350dp"
        android:layout_height="470dp"
        android:layout_marginStart="50dp"

        android:layout_marginTop="-80dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19">


        <RadioButton
            android:id="@+id/no"

            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/no"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="200dp"
            android:text="Нет"
            android:textAlignment="center"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/back_pain"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/backpain"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="130dp"
            android:text="Боль в спине"
            android:textAlignment="center"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/knee_pain"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/kneepain"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="110dp"
            android:text="Боль в коленях"
            android:textAlignment="center"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/lim_mobility"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/limphys"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="130dp"
            android:text="Ограниченная подвижность"
            android:textAlignment="center"
            android:textColor="#F7F8FA"
            android:textSize="15sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/amputation"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/amputation"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="140dp"
            android:text="Ампутация"
            android:textAlignment="center"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/other"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/other"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="170dp"
            android:text="Прочее"
            android:textAlignment="center"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>