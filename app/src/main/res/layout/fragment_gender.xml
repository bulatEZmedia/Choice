<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentGender">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/then11"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="339dp"
        android:layout_height="63dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#54585C"
        android:text="Далее"
        android:textColor="#AAAFB4"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTextEmail" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="@drawable/bar1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Ваш пол"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">


        <RadioButton
            android:id="@+id/man"

            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/man"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="150dp"
            android:text="Мужской"
            android:textAlignment="center"
            android:textColor="#F7F8FA"
            android:textSize="20sp"
            android:theme="@style/MyRadioButton"></RadioButton>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/woman"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/iconwoman"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="150dp"
            android:text="Женский"
            android:textAlignment="center"
            android:textColor="#F7F8FA"
            android:textSize="20sp"
            android:theme="@style/MyRadioButton"></RadioButton>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>