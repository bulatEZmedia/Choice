<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMainEvent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/then18"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="348dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#54585C"
        android:text="Далее"
        android:textColor="#AAAFB4"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.242" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/bar13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="286dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:text="Подготовьтесь к важному событию"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="350dp"
        android:layout_height="430dp"
        android:layout_marginStart="50dp"

        android:layout_marginTop="-150dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        app:layout_constraintVertical_bias="0.65">


        <RadioButton
            android:id="@+id/trip"

            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/trip"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="60dp"
            android:text="  Поездка"
            android:textAlignment="textStart"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/holiday_sea"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/holidayonsea"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="60dp"
            android:text="  Отпуск на море"
            android:textAlignment="textStart"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/family_event"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/familyevent"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="90dp"
            android:text="  Семейное событие"
            android:textAlignment="textStart"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/party"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/party"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="110dp"
            android:text="  Вечеринка"
            android:textAlignment="textStart"
            android:textColor="#F7F8FA"
            android:textSize="15sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/wedding"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/wedding"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="110dp"
            android:text="  Свадьба"
            android:textAlignment="textStart"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <RadioButton
            android:id="@+id/skip_event"
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle2"
            android:drawableLeft="@drawable/notimportant"
            android:layoutDirection="rtl"
            android:paddingLeft="15dp"
            android:paddingRight="110dp"
            android:text="  Пропустить"
            android:textAlignment="textStart"
            android:textColor="#F7F8FA"
            android:textSize="16sp"
            android:theme="@style/MyRadioButton"></RadioButton>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>